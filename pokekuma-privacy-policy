  <script>
    function showPolicy(lang) {
      document.querySelectorAll('.policy').forEach(el => el.classList.remove('active'));
      document.getElementById('policy-' + lang).classList.add('active');
      document.querySelectorAll('.tabs button').forEach(btn => btn.classList.remove('active'));
      document.getElementById('btn-' + lang).classList.add('active');
    }
    document.addEventListener('DOMContentLoaded', () => showPolicy('ja'));
  </script>
